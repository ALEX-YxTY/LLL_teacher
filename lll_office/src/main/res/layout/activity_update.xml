<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_grey1">

    <include
        layout="@layout/titlebar_back_white"
        android:id="@+id/titlebar" />
    <ScrollView
        android:layout_below="@id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/shape_back_grident2">
                <com.meishipintu.lll_office.customs.CircleImageView
                    android:id="@id/iv_head"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    app:border_width="2dp"
                    app:border_color="@color/white"
                    />
                <TextView
                    android:id="@+id/office_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_head"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="22dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/account_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_alignLeft="@id/office_name"
                    android:layout_below="@id/office_name"
                    android:layout_marginTop="10dp"
                    android:textSize="10sp"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:padding="12dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_black2"/>
                <RelativeLayout
                    android:id="@+id/rl_1"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="@drawable/shape_tv_lable_radiu8"
                    android:padding="12dp"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/good1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/text_black2"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/value1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/themeOrange"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_2"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="@drawable/shape_tv_lable_unselect_raidus8"
                    android:padding="12dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/good2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/text_black2"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/value2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/themeOrange"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_3"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="@drawable/shape_tv_lable_unselect_raidus8"
                    android:padding="12dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/good3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/text_black2"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/value3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/themeOrange"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_4"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="@drawable/shape_tv_lable_unselect_raidus8"
                    android:padding="12dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/good4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/text_black2"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/value4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/themeOrange"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/level_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员特权"
                    android:textSize="14sp"
                    android:textColor="@color/text_black2"/>
                <TextView
                    android:id="@+id/level_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/level_name"
                    android:textSize="12sp"
                    android:textColor="@color/text_grey1"
                    />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#6f000000"/>
        <Button
            android:id="@+id/bt_pay"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@color/themeOrange"
            android:layout_alignParentRight="true"
            style="@style/text_14_white"
            android:text="去开通"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="13dp"
            android:text="总价"
            style="@style/text_14_black"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="13dp"
            style="@style/text_14_theme"/>

    </RelativeLayout>
</RelativeLayout>