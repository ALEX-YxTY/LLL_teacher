<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_grey1"
    android:layout_alignBottom="@+id/tv_times_remain"
    android:layout_toStartOf="@+id/tv_user_name">
    <include layout="@layout/titlebar_back_white" android:id="@+id/titlebar"/>


        <Button
            android:id="@+id/bt_release"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/themeOrange"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:text="发布"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlebar"
        android:layout_above="@id/bt_release">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 职位名称 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_black2"
                    android:text="@string/job_name" />


                <EditText
                    android:id="@+id/et_job_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/themeOrange"
                    android:hint="请填写"
                    android:textColorHint="@color/themeOrange"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_centerVertical="true"
                    android:gravity="end"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:background="@color/border2" />

            <!--职位科目-->
            <RelativeLayout
                android:id="@+id/rl_course"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_black2"
                    android:text="@string/course" />

                <ImageView
                    android:src="@drawable/icon_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_grey1"
                    android:hint="请选择"
                    android:textColorHint="@color/text_grey1"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="26dp"
                    android:layout_centerVertical="true"
                    android:gravity="end"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:background="@color/border2" />

            <!--年级选择-->
            <RelativeLayout
                android:id="@+id/rl_grade"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_black2"
                    android:text="@string/grade" />

                <ImageView
                    android:src="@drawable/icon_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_grey1"
                    android:hint="请选择"
                    android:textColorHint="@color/text_grey1"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="26dp"
                    android:layout_centerVertical="true"
                    android:gravity="end"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:background="@color/border2" />


            <!-- 职位薪资 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_black2"
                    android:text="@string/job_money" />


                <EditText
                    android:id="@+id/et_money"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/themeOrange"
                    android:hint="请填写"
                    android:textColorHint="@color/themeOrange"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_centerVertical="true"
                    android:gravity="end"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:background="@color/border2" />

            <!--工作区域-->
            <RelativeLayout
                android:id="@+id/rl_work_area"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_black2"
                    android:text="@string/work_area" />

                <ImageView
                    android:src="@drawable/icon_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_work_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_grey1"
                    android:hint="请选择"
                    android:textColorHint="@color/text_grey1"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="26dp"
                    android:layout_centerVertical="true"
                    android:gravity="end"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:background="@color/border2" />

            <!-- 工作地点 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_black2"
                    android:text="@string/job_address" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/themeOrange"
                    android:hint="请填写"
                    android:textColorHint="@color/themeOrange"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_centerVertical="true"
                    android:maxLines="2"
                    android:gravity="end"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:background="@color/border2" />

            <!-- 性别 -->
            <RelativeLayout
                android:id="@+id/rl_sex"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:layout_marginTop="9dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_black2"
                    android:text="@string/sex" />

                <ImageView
                    android:src="@drawable/icon_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_grey1"
                    android:text="不限"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="26dp"
                    android:layout_centerVertical="true"
                    android:gravity="end"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:background="@color/border2" />


            <!-- 经验要求 -->
            <RelativeLayout
                android:id="@+id/rl_work_year"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:layout_marginTop="9dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_black2"
                    android:text="@string/work_year" />

                <ImageView
                    android:src="@drawable/icon_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_work_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_grey1"
                    android:text="不限"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="26dp"
                    android:layout_centerVertical="true"
                    android:gravity="end"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:background="@color/border2" />

            <!-- 教师资格证 -->
            <RelativeLayout
                android:id="@+id/rl_certification"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_black2"
                    android:text="@string/teacher_certification" />

                <ImageView
                    android:src="@drawable/icon_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_certification"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_grey1"
                    android:text="无要求"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="26dp"
                    android:layout_centerVertical="true"
                    android:gravity="end"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:background="@color/border2" />


            <!-- 职位要求 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/component1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="11dp"
                    android:text="职位要求"
                    android:textColor="@color/text_black2"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_job_require"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@id/component1"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/back_grey1"
                    android:gravity="top"
                    android:maxLines="30"
                    android:hint="请描述您的职位要求"
                    android:padding="7dp"
                    android:textColor="@color/text_black2"
                    android:textColorHint="@color/edit_text_color_grey"
                    android:textSize="13sp"

                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:background="@color/border2" />

            <!--其他要求-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/component4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="11dp"
                    android:text="其他要求"
                    android:textColor="@color/text_black2"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_other_require"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@id/component4"
                    android:padding="7dp"
                    android:textSize="13sp"
                    android:gravity="top"
                    android:maxLines="20"
                    android:textColor="@color/text_black2"
                    android:hint="请描述您的其他要求（可以为空）"
                    android:textColorHint="@color/edit_text_color_grey"
                    android:background="@color/back_grey1"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"

                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:background="@color/border2"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

