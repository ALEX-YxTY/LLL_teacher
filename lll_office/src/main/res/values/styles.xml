<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--custom ratingBar style-->
    <style name="CustomRatingBar" parent="Base.Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar_progress</item>
        <item name="android:rating">3.0</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <!--custom ratingBar style-->
    <style name="CustomRatingBar2" parent="Base.Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar_progress2</item>
        <item name="android:rating">0.0</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>

    <style name="text_14_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_black2</item>
    </style>
    <style name="text_14_grey">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_grey1</item>
    </style>
    <style name="text_14_theme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/themeOrange</item>
    </style>
    <style name="text_14_white">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text_12_black">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_black2</item>
    </style>
    <style name="text_10_grey">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_grey1</item>
    </style>

    <style name="text_12_grey">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_grey1</item>
    </style>

    <style name="text_12_theme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/themeOrange</item>
    </style>

    <style name="text_12_grey2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_grey2</item>
    </style>

    <style name="text_12_black2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_black3</item>
    </style>

    <style name="text_12_white">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="popAnimation">
        <!--显示动画-->
        <item name="android:windowEnterAnimation">@anim/popin_anim</item>
        <!--退出动画-->
        <item name="android:windowExitAnimation">@anim/popout_anim</item>
    </style>

    <style name="DialogNoAction" parent="Theme.AppCompat.Light.Dialog" >
        <item name="windowNoTitle">true</item>
    </style>

    <style name="text_bt">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#666666</item>
    </style>

    <!--custom dialog-->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item><!--无标题-->
    </style>

</resources>
