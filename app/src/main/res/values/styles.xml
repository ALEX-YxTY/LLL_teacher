<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--custom ratingBar style-->
    <style name="CustomRatingBar" parent="Base.Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar_progress</item>
        <item name="android:rating">3.0</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="text_14_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_black2</item>
    </style>
    <style name="text_14_grey">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_grey1</item>
    </style>
    <style name="text_14_theme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/themeOrange</item>
    </style>
    <style name="text_14_white">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text_12_black">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_black2</item>
    </style>
    <style name="text_10_grey">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_grey1</item>
    </style>

    <style name="text_12_grey">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_grey1</item>
    </style>

    <style name="text_12_theme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/themeOrange</item>
    </style>

    <style name="text_12_grey2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_grey2</item>
    </style>

    <style name="text_12_black2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_black3</item>
    </style>

</resources>
