<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_grey1"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <TextView
        android:text="年龄"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_12_grey"
        android:layout_marginTop="20dp"/>

    <com.milai.lll_teacher.custom.view.CustomLabelSelectView
        android:id="@+id/selectview_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <TextView
        android:text="工作经验"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_12_grey"
        android:layout_marginTop="20dp"/>

    <com.milai.lll_teacher.custom.view.CustomLabelSelectView
        android:id="@+id/selectview_workyear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <TextView
        android:text="学历"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_12_grey"
        android:layout_marginTop="20dp"/>

    <com.milai.lll_teacher.custom.view.CustomLabelSelectView
        android:id="@+id/selectview_education"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="37dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="重置"
            android:background="@drawable/shape_back_border2"
            style="@style/text_12_grey"/>
        <Button
            android:id="@+id/bt_filtrate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:background="@color/themeOrange"
            style="@style/text_12_white"/>
    </LinearLayout>
</LinearLayout>