<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_marginLeft="@dimen/item_margin13"
    android:layout_marginRight="@dimen/item_margin13"
    android:layout_marginTop="@dimen/item_margin13"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/shape_back_item_border">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginLeft="@dimen/item_margin13"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/job_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/iv_head"
        android:layout_marginLeft="16dp"
        android:text="物理老师"
        android:textColor="@color/text_black1"/>

    <TextView
        android:id="@+id/tv_office"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/job_name"
        android:layout_below="@id/job_name"
        android:layout_marginTop="5dp"
        android:maxWidth="150dp"
        android:lines="1"
        android:ellipsize="end"
        android:text="某某剖机构"
        android:textSize="12sp"
        android:textColor="@color/text_grey1"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/job_name"
        android:layout_below="@id/tv_office"
        android:layout_marginTop="5dp"
        android:maxWidth="150dp"
        android:lines="1"
        android:ellipsize="end"
        android:text="南京市鼓楼区"
        android:textSize="12sp"
        android:textColor="@color/text_grey1" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:maxWidth="100dp"
        android:text="2800-9000每月"
        android:layout_marginRight="10dp"
        android:textSize="14sp"
        android:textColor="@color/text_red"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:text="09 - 01"
        android:textSize="12sp"
        android:textColor="@color/text_grey1"/>

</RelativeLayout>