<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_grey1">

    <include layout="@layout/titlebar"/>

    <!--用户条-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_margin12"/>
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_head"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="22dp"
            android:textSize="16sp"
            android:textColor="@color/text_black2"
            android:text="用户名sdflj"
            />

        <TextView
            android:id="@+id/tv_user_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_user_name"
            android:layout_below="@id/tv_user_name"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:textColor="@color/edit_text_color"
            android:text="普通用户"
        />

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <!--我的简历-->
    <RelativeLayout
        android:id="@+id/rl_my_resume"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:textSize="14sp"
            android:textColor="@color/text_black2"
            android:text="@string/my_resume"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <!--我的投递记录-->
    <RelativeLayout
        android:id="@+id/rl_apply_job"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_margin12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:textSize="14sp"
            android:textColor="@color/text_black2"
            android:text="@string/my_apply_record"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12.5dp"
            android:background="@color/border2"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <!--我的面试邀请-->
    <RelativeLayout
        android:id="@+id/rl_my_interview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_margin12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_black2"
            android:text="@string/my_interview"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <!--我的收藏的职位-->
    <RelativeLayout
        android:id="@+id/rl_my_job_collection"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="9dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_margin12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_black2"
            android:text="@string/my_job_collectin"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12.5dp"
            android:background="@color/border2"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <!--我的关注的机构-->
    <RelativeLayout
        android:id="@+id/rl_my_attention_office"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_margin12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_black2"
            android:text="@string/my_attention_office"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!--设置过-->
    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="9dp"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:textSize="14sp"
            android:textColor="@color/text_black2"
            android:text="@string/setting"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>